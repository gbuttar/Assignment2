Prog.   Program ::= Exp ;
EAbs.   Exp1 ::= "\\" Id "." Exp ;
EApp.   Exp2 ::= Exp2 Exp3 ;
ENat0.  Exp3 ::= "0" ;
ENatS.  Exp3 ::= "S" Exp3 ; -- "S" is now a 'terminal symbol' and cannot be parsed as an identifier
EVar.   Exp4 ::= Id ;
EIf.    Exp5 ::= "if" Exp "=" Exp "then" Exp "else" Exp ;
ELet.   Exp6 ::= "let" Id "=" Exp "in" Exp ;
EMinus. Exp10 ::= Exp7 "-" Exp8 ;

coercions Exp 4 ;


